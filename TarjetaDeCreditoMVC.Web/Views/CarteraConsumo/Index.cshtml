@model IEnumerable<TarjetaDeCreditoMVC.Entidades.ViewModels.CarteraConsumo.CarteraConsumoListViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<div>
    <a href="@Url.Action("Create","CarteraConsumo")" class="btn btn-primary" style="float: right">Nuevo</a>
    <h2>Lista de Carteras de Consumo</h2>

</div>
<hr />
@if (TempData["Msg"] != null)
{
    var msg = TempData["Msg"].ToString();
    <div class="alert alert-success alert-dismissible">
    <button type="button" class="close" data-dismiss="alert">&times;<
        button>
    <strong>Éxito!</strong> @msg
</div>
}
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LimiteDeCredito)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CostoDeRenovacion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LimiteDeCredito)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CostoDeRenovacion)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.CarteraDeConsumoId }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("Detalle", "Details", new { id = item.CarteraDeConsumoId }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Borrar", "Delete", new { id = item.CarteraDeConsumoId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
