@model IEnumerable<TarjetaDeCreditoMVC.Entidades.ViewModels.Provincia.ProvinciaListViewModel>

@{
    ViewBag.Title = "Index";
}
<div>
    <a href="@Url.Action("Create","Provincia")" class="btn btn-primary" style="float: right">Nuevo</a>
    <h2>Lista de provincias</h2>

</div>
<hr />
@if (TempData["Msg"] != null)
{
    var msg = TempData["Msg"].ToString();
<div class="alert alert-success alert-dismissible">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong>Éxito!</strong> @msg
</div>}

<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombreProvincia)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreProvincia)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.ProvinciaId }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("Detalle", "Details", new { id = item.ProvinciaId }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Borrar", "Delete", new { id = item.ProvinciaId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
